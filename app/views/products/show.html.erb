<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="col-12 text-center">
      <h1>Product</h1>
    </div>
  </div>
  <br>

  <p>
    <strong>Name:</strong>
    <%= @product.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @product.description %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= @product.price ? number_to_currency(@product.price, delimiter: '.', precision: 0) : '' %>
  </p>

  <p>
    <strong>Status:</strong>
    <%= @product.status ? @product.status.titleize : '' %>
  </p>

  <%= link_to 'Edit', edit_product_path(@product) %> |
  <%= link_to 'Back', products_path %>
</div>
<br>
