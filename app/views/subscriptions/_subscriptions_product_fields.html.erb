<fieldset>
  <div class="row mt-2">
    <div class="col-md-12 card border">
      <div class="card-body">
        <div class="row padding-top">
          <div class="col-lg-12">&nbsp;</div>
          <div class="col-lg-4">
            <div class="field">
              <%= f.collection_select(:product_id, @products, :id, :name, { include_blank: false }, { class: 'form-control' }) %>
            </div>
          </div>
          <div class="col-lg-1">
            <div class="field padding-top-40px">
              <label>&nbsp</label>
              <%= f.hidden_field :_destroy, class: "destroy_elem" %>
              <%= link_to "Remove", '#', class: "remove_fields btn btn-danger" %>
              <%= f.hidden_field :id %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</fieldset>
