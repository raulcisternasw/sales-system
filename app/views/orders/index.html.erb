<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Subscription</th>
      <th>Buy order</th>
      <th>Token</th>
      <th>Amount</th>
      <th>Status</th>
      <th>Card number</th>
      <th>Transaction date</th>
      <th>Payment type code</th>
      <th>Installments amount</th>
      <th>Installments number</th>
      <th>Balance</th>
      <th>Authorization code</th>
      <th>Authorization date</th>
      <th>Nullified amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.user_id %></td>
        <td><%= order.subscription_id %></td>
        <td><%= order.buy_order %></td>
        <td><%= order.token %></td>
        <td><%= order.amount %></td>
        <td><%= order.status %></td>
        <td><%= order.card_number %></td>
        <td><%= order.transaction_date %></td>
        <td><%= order.payment_type_code %></td>
        <td><%= order.installments_amount %></td>
        <td><%= order.installments_number %></td>
        <td><%= order.balance %></td>
        <td><%= order.authorization_code %></td>
        <td><%= order.authorization_date %></td>
        <td><%= order.nullified_amount %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

